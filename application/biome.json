{
  "$schema": "https://biomejs.dev/schemas/1.8.1/schema.json",
  "formatter": {
    "indentStyle": "space",
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "files": {
    "ignore": ["node_modules", ".swc", ".turbo", "dist", "coverage", "obj", "package-lock.json"],
    "include": ["*.ts", "**/*.ts", "*.tsx", "**/*.tsx"]
  }
}
