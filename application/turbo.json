{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["CERTIFICATE_PASSWORD"],
  "tasks": {
    "build": {
      "outputs": [
        "dist/**",
        "storybook-static/**"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["CERTIFICATE_PASSWORD"]
    },
    "clean": {
      "cache": false
    }
  },
  "remoteCache": {
    "enabled": false
  }
}
